@model LibraryLite.UI.Web.MVC.Presentation.ViewModels.ClassViewModel

@{
    ViewBag.Title = "Edit class";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="form-container">
    <div class="form-wrapper">
        @using (Html.BeginForm())
        {
            @*<button class="form-btn-hide">
                <i class="fa fa-close" aria-hidden="true"></i>
            </button>*@

            <form class="form validate-form">
                <span class="form-title">
                    Edit class
                </span>
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
                <div class="input-wrapper validate-input" data-validate="Username is required">
                    <span class="input-label">Class name</span>
                    @Html.TextBoxFor(m => m.ClassName, new { @class = "input", @placeholder = "Enter class name" })
                    <span class="input-focus"></span>
                </div>
                <div class="form-container-form-btn">
                    <button class="form-btn">
                        <span>
                            Save
                            <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                        </span>
                    </button>
                    <a href="@Url.Action("Index","Class")"><i class='fa fa-arrow-circle-left'></i>Back to List</a>
                </div>
            </form>
        }
    </div>
</div>

