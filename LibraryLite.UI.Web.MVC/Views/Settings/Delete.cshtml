@model LibraryLite.UI.Web.MVC.Presentation.ViewModels.ApplicationSettingsViewModel

@{
    ViewBag.Title = "Delete settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form mx-auto">
    <div class="form-header">
        <h2>LibraryLite</h2>
    </div>
    <div class="form-body details-view">
        <p>Are you sure you want to delete this setting</p>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.InstitutionName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.InstitutionName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MaxBooksLoanable)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MaxBooksLoanable)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LoanDays)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LoanDays)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Penalty)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Penalty)
            </dd>

        </dl>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="">
                <input type="submit" value="Delete" class="btn btn-primary" /> |
                <a href="@Url.Action("Index","Settings")"><i class='fa fa-plus-circle'></i>Back to List</a>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

