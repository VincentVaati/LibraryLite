@model LibraryLite.UI.Web.MVC.Presentation.ViewModels.ApplicationSettingsViewModel

@{
    ViewBag.Title = "Create settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form mx-auto">
    <div class="form-header">
        <h2>LibraryLite</h2>
    </div>
    <div class="form-body">
        @using (Html.BeginForm("Create", "Settings", FormMethod.Post, new { @class = "form-horizontal register", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <p>Enter application settings</p>
            @Html.ValidationSummary()
            <div class="form-group">
                @Html.LabelFor(m => m.InstitutionName, new { @class = "control-label" })
                <div class="">
                    @Html.TextBoxFor(m => m.InstitutionName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.MaxBooksLoanable, new { @class = "control-label" })
                <div class="">
                    @Html.TextBoxFor(m => m.MaxBooksLoanable, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.LoanDays, new { @class = "control-label" })
                <div class="">
                    @Html.TextBoxFor(m => m.LoanDays, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Penalty, new { @class = "control-label" })
                <div class="">
                    @Html.TextBoxFor(m => m.Penalty, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="">
                    <input type="submit" class="btn btn-block btn-primary" value="Save" />
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


