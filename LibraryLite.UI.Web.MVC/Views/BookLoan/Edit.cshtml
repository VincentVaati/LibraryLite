@model LibraryLite.Core.Entities.BookLoan

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-container">
    <div class="form-wrapper">
        @using (Html.BeginForm())
        {
            @*<button class="form-btn-hide">
                <i class="fa fa-close" aria-hidden="true"></i>
            </button>*@

            <form class="form validate-form">
                <span class="form-title">
                    Return book
                </span>
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
                <div class="input-wrapper validate-input" data-validate="Sudent is required">
                    <span class="input-label">Date Returned</span>
                    @Html.EditorFor(model => model.DateReturned)
                    <span class="input-focus"></span>
                </div>
                <div class="form-container-form-btn">
                    <button class="form-btn">
                        <span>
                            return book
                            <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                        </span>
                    </button>
                    <a href="@Url.Action("Index","BookLoan")"><i class='fa fa-plus-circle'></i>Back to List</a>
                </div>
            </form>
        }
    </div>
</div>
<script src="~/Scripts/map-custom.js"></script>

<script src="~/Scripts/main.js"></script>

