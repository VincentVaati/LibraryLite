@model LibraryLite.UI.Web.MVC.Presentation.ViewModels.BookLoanRequestViewModel

@{
    ViewBag.Title = "Loan book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-container">
    <div class="form-wrapper">
        @using (Html.BeginForm("Create", "BookLoan", FormMethod.Post, new { @class = "form-horizontal register", role = "form" }))
        {
            @*<button class="form-btn-hide">
                <i class="fa fa-close" aria-hidden="true"></i>
            </button>*@

            <form class="form validate-form">
                <span class="form-title">
                    Add book loan
                </span>
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
                <div class="input-wrapper validate-input" data-validate="Sudent is required">
                    <span class="input-label">Student</span>
                    @Html.DropDownList("StudentId", String.Empty)
                    <span class="input-focus"></span>
                </div>

                <div class="input-wrapper validate-input" data-validate="Book to loan is required">
                    <span class="input-label">Book name</span>
                    @Html.DropDownList("BookId", String.Empty)
                    <span class="input-focus"></span>
                </div>

                <div class="input-wrapper validate-input" data-validate="Date of issue is rquired">
                    <span class="input-label">Date of issue</span>
                    <input id="DateOfIssue" name="DateOfIssue" type="date" class="input" />
                    <span class="input-focus"></span>
                </div>

                <div class="input-wrapper validate-input">
                    <span class="input-label">Due date</span><br />
                    <input id="DueDate" name="DueDate" type="date" class="form-control" />
                    <span class="input-focus"></span>
                </div>
                <div class="form-container-form-btn">
                    <button class="form-btn">
                        <span>
                            Add book loan
                            <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                        </span>
                    </button>
                </div>
            </form>
        }
    </div>
</div>






