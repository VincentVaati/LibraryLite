@using Microsoft.AspNet.Identity
@model LibraryLite.UI.Web.MVC.Models.ManageUserViewModel

<div class="form-container">
    <div class="form-wrapper">
       @using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { role = "form" }))
        {
            @*<button class="form-btn-hide">
                <i class="fa fa-close" aria-hidden="true"></i>
            </button>*@

            <form class="form validate-form">
                <span class="form-title">
                    Change password
                </span>
                <p>You're logged in as <strong>@User.Identity.GetUserName()</strong>.</p>
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
                <div class="input-wrapper validate-input" data-validate="Username is required">
                    <span class="input-label">Old password</span>
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "input", @placeholder = "Enter your old password" })
                    <span class="input-focus"></span>
                </div>

                <div class="input-wrapper validate-input" data-validate="Password is required">
                    <span class="input-label">New password</span>
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "input", @placeholder = "Enter your new password" })
                    <span class="input-focus"></span>
                </div>

                <div class="input-wrapper validate-input" data-validate="Password confirmation is required">
                    <span class="input-label">Confirm password</span>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input", @placeholder = "Enter your password" })
                    <span class="input-focus"></span>
                </div>
                <div class="form-container-form-btn">
                    <button class="form-btn">
                        <span>
                            change password
                            <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                        </span>
                    </button>
                </div>
            </form>
        }
    </div>
</div>
<script src="~/Scripts/map-custom.js"></script>

<script src="~/Scripts/main.js"></script>


